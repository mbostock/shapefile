#!/usr/bin/env node

var fs = require("fs"),
    optimist = require("optimist"),
    shapefile = require("../"),
    shp = require("../shp"),
    geojson = require("../geojson");

var argv = optimist
    .usage("Usage: \033[1mshp2json\033[0m [options] [file]\n\n"

+ "Version: " + shapefile.version + "\n\n"

+ "Reads the specified shp (and dbf) file, and outputs it as GeoJSON.")

    .options("o", {
      alias: "out",
      describe: "output GeoJSON file name",
      default: "-",
    })
    .options("ignore-properties", {
      describe: "skip reading shapefile properties (.dbf) for faster performance",
      type: "boolean",
      default: false
    })
    .options("property-encoding", {
      describe: "character encoding for reading shapefile properties (.dbf)",
      default: null
    })
    .options("help", {
      describe: "display this helpful message",
      type: "boolean",
      default: false
    })
    .check(function(argv) {
      if (argv.help) return;
      if (argv._.length > 1) throw new Error("zero or one input required");
    })
    .argv;

if (argv.help) return optimist.showHelp();

var input = argv._[0] || "-",
    output = geojson.write(argv.o === "-" ? process.stdout : fs.createWriteStream(argv.o));

if (input === "-") shp.read(process.stdin, output);
else if (argv["ignore-properties"]) shp.read(fs.createReadStream(input), output);
else shapefile.read(input, argv["property-encoding"], output);
